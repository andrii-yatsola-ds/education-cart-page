<quantity-selector class="quantity-selector">
  <div class="new-product__quantity-selector d-flex align-items-center">
    <button type="button" class="new-product__quantity-btn js-quantity-btn-minus">
        {%- render 'icons', icon: 'icon-minus' -%}
    </button>
    <input type="number" name="quantity" value="1" min="1" max="100" class="new-product__quantity-input js-quantity-input"/>
    <button type="button" class="new-product__quantity-btn js-quantity-btn-plus">
        {%- render 'icons', icon: 'icon-plus' -%}
    </button>
  </div>
</quantity-selector>